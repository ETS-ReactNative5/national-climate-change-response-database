{
  "name": "nccrd",
  "version": "1.0.0",
  "description": "Node.js API",
  "type": "module",
  "scripts": {
    "start": "nodemon --exec 'prettier --write \"src/**/*.@(js|json|geojson|cjs|mjs|graphql)\" && TZ=utc node --trace-warnings --loader ./loaders/geojson.js --experimental-json-modules src'",
    "start:prod": "TZ=utc node --no-warnings --loader ./loaders/geojson.js --experimental-json-modules src",
    "lint": "eslint -c .eslintrc.cjs \"./**/*.{js,mjs,cjs}\"",
    "rollup": "rimraf bin && rollup --config rollup.config.js && cp -r src/http/public-image/images bin/images && cp -r src/mssql/install-vocabulary/trees bin/trees && cp -r src/graphql/schema/type-defs bin/type-defs && cp -r src/mssql/sql bin/sql && cp src/graphql/resolvers/mutations/seed-database/erm/erm.sql bin/erm.sql && cp -r src/client-dist bin/client-dist",
    "prettier": "prettier --write \"./**/*.@(js|jsx|json|mjs|cjs|graphql)\"",
    "ncu": "ncu",
    "ncu -u": "ncu -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SAEON/national-climate-change-systems.git"
  },
  "author": "zd.smith@saeon.nrf.ac.za",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.7.0",
    "nodemon": "^2.0.15",
    "npm-check-updates": "^12.2.1",
    "prettier": "^2.5.1"
  },
  "dependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.12",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/eslint-plugin": "^7.16.5",
    "@babel/preset-env": "^7.16.11",
    "@graphql-tools/schema": "^8.3.1",
    "@koa/router": "^10.1.1",
    "@rollup/plugin-json": "^4.1.0",
    "apollo-server-core": "^3.6.2",
    "apollo-server-koa": "3.6",
    "base64url": "^3.0.1",
    "cookie": "^0.4.1",
    "csv": "^6.0.5",
    "dataloader": "^2.0.0",
    "date-fns": "^2.28.0",
    "dotenv": "^14.3.0",
    "graphql": "^16.2.0",
    "graphql-type-json": "^0.3.2",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-compress": "^5.1.0",
    "koa-morgan": "^1.0.1",
    "koa-mount": "^4.0.0",
    "koa-passport": "^4.1.4",
    "koa-session": "^6.2.0",
    "koa-static": "^5.0.0",
    "koa2-formidable": "^1.0.3",
    "mssql": "^7.3.0",
    "nanoid": "^3.2.0",
    "object-hash": "^2.2.0",
    "openid-client": "^5.1.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.66.0",
    "sanitize-filename": "^1.6.3",
    "shpjs": "^4.0.2",
    "sift": "^15.1.3",
