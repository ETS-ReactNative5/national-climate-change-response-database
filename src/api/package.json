{
  "name": "nccrd",
  "version": "1.0.0",
  "description": "Node.js API",
  "type": "module",
  "scripts": {
    "start": "nodemon --ignore 'src/client-dist/**/*' --ext js,graphql,json --watch ./src --exec 'prettier --write \"src/**/*.@(js|json|graphql)\" && TZ=utc node --trace-warnings --experimental-json-modules src'",
    "start:prod": "TZ=utc node --no-warnings --experimental-json-modules src",
    "lint": "eslint -c .eslintrc.cjs \"./**/*.{js,mjs,cjs}\"",
    "rollup": "rimraf bin && rollup --config rollup.config.js && cp -r src/graphql/resolvers/mutations/seed-database/vocabularies/trees bin/trees && cp -r src/graphql/schema/type-defs bin/type-defs && cp -r src/graphql/resolvers/mutations/seed-database/user-model/auth-config bin/auth-config && cp -r src/graphql/resolvers/mutations/migrate-database/sql bin/sql && cp src/graphql/resolvers/mutations/seed-database/erm/erm.sql bin/erm.sql && cp -r src/client-dist bin/client-dist",
    "prettier": "prettier --write \"./**/*.@(js|jsx|json|mjs|cjs|graphql)\"",
    "ncu": "ncu -x graphql-tools",
    "ncu -u": "ncu -u -x graphql-tools"
  },
  "bin": "bin/index.cjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SAEON/national-climate-change-systems.git"
  },
  "author": "zach@saeon.ac.za",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^7.32.0",
    "nodemon": "^2.0.12",
    "npm-check-updates": "^11.8.3",
    "prettier": "^2.3.2"
  },
  "dependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/eslint-parser": "^7.15.0",
    "@babel/eslint-plugin": "^7.14.5",
    "@babel/preset-env": "^7.15.0",
    "@koa/router": "^10.1.1",
    "@rollup/plugin-json": "^4.1.0",
    "apollo-server-koa": "3.1",
    "cookie": "^0.4.1",
    "csv": "^5.5.0",
    "dataloader": "^2.0.0",
    "date-fns": "^2.23.0",
    "dotenv": "^10.0.0",
    "graphql": "^15.5.1",
    "graphql-tools": "^7.0.5",
    "graphql-type-json": "^0.3.2",
    "install": "^0.13.0",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-compress": "^5.1.0",
    "koa-morgan": "^1.0.1",
    "koa-mount": "^4.0.0",
    "koa-passport": "^4.1.4",
    "koa-session": "^6.2.0",
    "koa-static": "^5.0.0",
    "koa2-formidable": "^1.0.3",
    "mssql": "^7.2.1",
    "nanoid": "^3.1.25",
    "npm": "^7.21.0",
    "object-hash": "^2.2.0",
    "openid-client": "^4.7.4",
    "passport-google-oauth": "^2.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.3",
    "sift": "^14.0.2",
    "sql-formatter": "^4.0.2",
    "wkt": "^0.1.1",
    "xlsx-populate": "^1.21.0"
  }
}
