{
  "name": "nccrd-api",
  "version": "0.0.1",
  "description": "NCCRD API",
  "type": "module",
  "scripts": {
    "start": "nodemon --ext js,graphql,json --watch ./src --exec 'prettier --write \"src/**/*.@(js|json|graphql)\" && TZ=utc node --trace-warnings --experimental-json-modules src'",
    "start:prod": "TZ=utc node --no-warnings --experimental-json-modules src",
    "lint": "eslint -c .eslintrc.cjs \"./**/*.{js,mjs,cjs}\"",
    "rollup": "rimraf bin && rollup --config rollup.config.js && cp -r src/graphql/resolvers/mutations/update-vocabulary/trees bin/trees && cp -r src/graphql/schema/type-defs bin/type-defs && cp -r src/mssql/setup-db/sql bin/sql",
    "prettier": "prettier --write \"./**/*.@(js|jsx|json|mjs|cjs|graphql)\"",
    "ncu": "ncu",
    "ncu -u": "ncu -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SAEON/national-climate-change-systems.git"
  },
  "author": "zach@saeon.ac.za",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.14.0",
    "@babel/eslint-parser": "^7.13.14",
    "@babel/eslint-plugin": "^7.13.15",
    "@babel/preset-env": "^7.14.0",
    "@rollup/plugin-json": "^4.1.0",
    "eslint": "^7.24.0",
    "nodemon": "^2.0.7",
    "npm-check-updates": "^11.4.1",
    "prettier": "^2.2.1",
    "rollup": "^2.47.0"
  },
  "dependencies": {
    "@koa/router": "^10.0.0",
    "apollo-server-koa": "2.22",
    "cookie": "^0.4.1",
    "csv": "^5.5.0",
    "dataloader": "^2.0.0",
    "date-fns": "^2.21.1",
    "dotenv": "^8.2.0",
    "graphql": "^15.5.0",
    "graphql-tools": "^7.0.4",
    "graphql-type-json": "^0.3.2",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-compress": "^5.0.1",
    "koa-morgan": "^1.0.1",
    "koa-mount": "^4.0.0",
    "koa-passport": "^4.1.4",
    "koa-session": "^6.2.0",
    "koa-static": "^5.0.0",
    "mssql": "^6.3.1",
    "nanoid": "^3.1.22",
    "passport-google-oauth": "^2.0.0",
    "passport-oauth": "^1.0.0",
    "rimraf": "^3.0.2",
    "sift": "^13.5.0",
    "sql-formatter": "^4.0.2",
    "wkt": "^0.1.1"
  }
}
